{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,
    "paths": {
      "*":["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests"]
}
